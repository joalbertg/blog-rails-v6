<div class="large-container center-block">
<% if @article %>
  <h1><%= @article.title %></h1>
  <div>
    <p>Written by <strong><%= @article.user.email %></strong></p>
  </div>
  <div><%= @article.content %></div>
  <div>
    <%= link_to 'Delete', article_path(@article), method: :delete %>
  </div>
<% else %>
  <div><h1>Article not found </h1></div>
<% end %>
</div>
