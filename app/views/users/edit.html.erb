<div class="small-container center-block">
  <p class="font-weigth-bold text-uppercase margin-top">Edit user</p>

  <% if current_user.avatar.attached? %>
    <%= image_tag url_for(current_user.avatar), height: 200 %>
  <% end%>
  <%= form_with(model: current_user, local: true) do |f| %>
    <div class="field">
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.submit class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
